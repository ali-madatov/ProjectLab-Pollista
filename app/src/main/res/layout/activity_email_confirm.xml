<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_main"
    tools:context=".UI.EmailConfirmActivity">

    <TextView
        android:id="@+id/tvThanksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Thank you for\n signing up!"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/giloryregular"

        android:layout_marginTop="125dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <ImageView
        android:id="@+id/thanksIllustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_thanks_illustration"

        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/tvThanksText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/tvConfirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="We have sent a confirmation link\n    to your e-mail address."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroymedium"

        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/thanksIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>