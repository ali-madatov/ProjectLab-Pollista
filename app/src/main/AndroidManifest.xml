<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectLabPollista"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.pollista.UI.AddPostActivity"
            android:exported="false" />
        <activity
            android:name="com.example.pollista.UI.AccountActivity"
            android:exported="true"
            android:theme="@style/Theme.LightWindow"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.example.pollista.UI.ConfirmationActivity"
            android:exported="true" />
        <activity
            android:name="com.example.pollista.UI.ForgotPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.LightWindow" />
        <activity
            android:name="com.example.pollista.UI.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.LightWindow" />
        <activity
            android:name="com.example.pollista.UI.EmailConfirmActivity"
            android:exported="false" />
        <activity
            android:name="com.example.pollista.UI.SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.LightWindow" />
        <activity
            android:name="com.example.pollista.UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>